<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <TextView
        android:id="@+id/textRegTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTER"
        android:textSize="50dp"
        tools:layout_editor_absoluteX="93dp"
        tools:layout_editor_absoluteY="109dp" />

    <TextView
        android:id="@+id/textRegTitle2"
        android:layout_width="124dp"
        android:layout_height="20dp"
        android:text="NOT registered yet?"
        tools:layout_editor_absoluteX="93dp"
        tools:layout_editor_absoluteY="188dp" />
    <Button
        android:id="@+id/buttonToSign"
        android:layout_width="93dp"
        android:layout_height="42dp"
        android:text="sign in"
        tools:layout_editor_absoluteX="225dp"
        tools:layout_editor_absoluteY="176dp" />


    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="continue"
        android:textSize="30dp"
        tools:layout_editor_absoluteX="122dp"
        tools:layout_editor_absoluteY="550dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="291dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        tools:layout_editor_absoluteX="83dp"
        tools:layout_editor_absoluteY="232dp">

        <EditText
            android:id="@+id/editTextText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:hint="Name" />

        <EditText
            android:id="@+id/editTextTextEmailAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:hint="E-mail Adress"/>

        <EditText
            android:id="@+id/pswReg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:hint="Password"/>

        <EditText
            android:id="@+id/confirmPswReg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:hint="Check Password"/>

    </LinearLayout>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</androidx.constraintlayout.widget.ConstraintLayout>